{
  "manifest_version": 3,
  "name": "Call Rhythm",
  "version": "1.0",
  "description": "Auto-updating Chrome extension via GitHub.",
  "permissions": ["alarms", "storage"],
  "host_permissions": ["https://mrrob100.github.io/*"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["remote/payload.js"],
      "run_at": "document_idle"
    }
  ]
}
